<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Patient Modeli için Form Görünümü -->
        <record id="view_patient_form" model="ir.ui.view">
            <field name="name">dr_patients.patient.form</field>
            <field name="model">dr_patients.patient</field>
            <field name="arch" type="xml">
                <form>
                    <!-- Patient modelinin alanlarını ekleyin -->
                </form>
            </field>
        </record>

        <!-- Patient Modeli için Ağaç Görünümü -->
        <record id="view_patient_tree" model="ir.ui.view">
            <field name="name">dr_patients.patient.tree</field>
            <field name="model">dr_patients.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Patient modelinin alanlarını ekleyin -->
                </tree>
            </field>

        </record>

        <!-- Patient Menüsü -->
        <menuitem id="menu_patient" name="Patients" sequence="2"/> 
        <menuitem id="menu_patient_list" name="Patient List" parent="menu_patient" action="action_patient_list" sequence="1"/>
        <!-- Diğer menü öğelerini ekleyin -->
    </data>
</odoo>
